class Solution {
    public int passThePillow(int n, int time) {
       int ans = 1;
    boolean flag = true; 
    
    for (int i = 1; i <= time; i++) {
        if (flag) {
            ans++;
            if (ans == n) {
                flag = false;
            }
        } else {
            ans--;
            if (ans == 1) {
                flag = true;
            }
        }
    }
    
    return a;


}
}
